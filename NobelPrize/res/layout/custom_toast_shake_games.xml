<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutCustomToastGames"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D777" >

    <ImageView
        android:id="@+id/imageViewShake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dip"
        android:src="@drawable/icon_shake_final" />

    <TextView
        android:id="@+id/textViewMessageToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewShake"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/ClueShakeToast"
         android:textColor="#FFF"
         />

</RelativeLayout>